@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<nav class="navbar navbar-expand-lg navbar-light pt-0 pb-0">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="@ManageNavPages.IndexNavClass(ViewContext) nav-item nav-link font-weight-bold">
                <a asp-page="./Index" class="nav-link">Profile</a>
            </li>
            <li class="@ManageNavPages.ChangePasswordNavClass(ViewContext) nav-item nav-link font-weight-bold">
                <a id="change-password" asp-page="./ChangePassword" class="nav-link">Change password</a>
            </li>
            @if (hasExternalLogins)
            {
                <li class="@ManageNavPages.ExternalLoginsNavClass(ViewContext) nav-item nav-link font-weight-bold">
                    <a id="external-login" asp-page="./ExternalLogins" class="nav-link">External Logins</a>
                </li>
            }
            <li class="@ManageNavPages.PersonalDataNavClass(ViewContext) nav-item nav-link font-weight-bold">
                <a asp-page="./PersonalData" class="nav-link">Personal Data</a>
            </li>
        </ul>
    </div>
</nav>
<hr class="my-0 d-none d-lg-block" />
