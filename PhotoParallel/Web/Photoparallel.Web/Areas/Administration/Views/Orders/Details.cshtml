@model Photoparallel.Web.Areas.Administration.ViewModels.Orders.OrderDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="h2 text-center text-info font-weight-bold">Order Details</div>
<hr class="w-50" />
<div class="container">
    <div class="col-md-6">
        <div class="h4 font-weight-bold text-center text-info">Order Details:</div>
        <div class="card card-body bg-transparent">
            <div><span class="font-weight-bold">Order №:</span> @Model.Id</div>
            <div><span class="font-weight-bold">Created On:</span> @Model.CreatedOn</div>
            <div><span class="font-weight-bold">Order Status:</span> @Model.OrderStatus</div>
            <div><span class="font-weight-bold">Payment Status:</span> @Model.PaymentStatus</div>
            @if (Model.OrderStatus == "Delivered")
            {
                <div><span class="font-weight-bold">Delivered On:</span> @Model.EstimatedDeliveryDate</div>
            }
            else
            {
                <div><span class="font-weight-bold">Estimated Delivery Date:</span> @Model.EstimatedDeliveryDate</div>
            }
            @if (Model.Invoice != "N/A")
            {
                <div>
                    <span class="font-weight-bold">Invoice №:</span>
                    <a asp-area="Administration" asp-controller="Invoices" asp-action="Details" asp-route-id="@Model.InvoiceId">
                        <u>@Model.Invoice</u>
                    </a>
                </div>
            }
            else
            {
                <div><span class="font-weight-bold">Invoice №:</span> @Model.Invoice</div>
            }
            <div><span class="font-weight-bold">All Products:</span> @Model.TotalPrice lv.</div>
            <div><span class="font-weight-bold">Shipping:</span> @Model.Shipping lv.</div>
            <hr />
            <div class="h4"><span class="font-weight-bold">Grand Total:</span> @Model.GrandTotal lv.</div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="h4 font-weight-bold text-center text-info">Recipent Data:</div>
        <div class="card card-body bg-transparent">
            <div><span class="font-weight-bold">Recipient:</span> @Model.Recipient</div>
            <hr />
            <div><span class="font-weight-bold">Phone Number:</span> @Model.RecipientPhoneNumber</div>
            <hr />
            <div><span class="font-weight-bold">Address:</span> @Model.ShippingAddress</div>
        </div>
        <hr />
        <div>
            @if (Model.OrderStatus == "Pending")
            {
                <div class=" m-3 d-flex justify-content-between">
                    <a asp-area="Administration" asp-controller="Orders" asp-action="Delete" asp-route-id="@Model.Id" class="myButton-red btn-sm"><i class="fa fa-trash"></i> Delete</a>

                    <a asp-area="Administration" asp-controller="Orders" asp-action="Edit" asp-route-id="@Model.Id" class="myButton-orange btn-sm"><i class="fas fa-cog"></i> Edit</a>

                    <a asp-area="Administration" asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="myButton-olive btn-sm"><i class="fas fa-check"></i> Approve</a>

                    <a asp-area="Administration" asp-controller="Orders" asp-action="Pending" class="myButton-blue btn-sm"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            }
            else if (Model.OrderStatus == "Waiting Delivery")
            {
                <div class=" m-3 d-flex justify-content-between">
                    <a asp-area="Administration" asp-controller="Orders" asp-action="Approve" asp-route-id="@Model.Id" class="myButton-olive btn-sm"><i class="fas fa-check"></i> Approve</a>

                    <a asp-area="Administration" asp-controller="Orders" asp-action="Waiting" class="myButton-blue btn-sm"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            }
            else if (Model.OrderStatus == "Approved")
            {
                <div class=" m-3 d-flex justify-content-around">
                    <a asp-area="Administration" asp-controller="Orders" asp-action="Ship" asp-route-id="@Model.Id" class="myButton-olive btn-sm"><i class="fas fa-check"></i> Ship</a>

                    <a asp-area="Administration" asp-controller="Orders" asp-action="Approved" class="myButton-blue btn-sm"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            }
            else if (Model.OrderStatus == "Shipped")
            {
                <div class=" m-3 d-flex justify-content-around">
                    <a asp-area="Administration" asp-controller="Orders" asp-action="Deliver" asp-route-id="@Model.Id" class="myButton-olive btn-sm"><i class="fas fa-check"></i> Deliver</a>

                    <a asp-area="Administration" asp-controller="Orders" asp-action="Shipped" class="myButton-blue btn-sm"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            }
            else if (Model.OrderStatus == "Delivered")
            {
                <div class=" m-3 d-flex justify-content-around">
                    <a asp-area="Administration" asp-controller="Orders" asp-action="Delivered" class="myButton-blue btn-sm"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            }
            else if (Model.OrderStatus == "Denied")
            {
                <div class=" m-3 d-flex justify-content-around">
                    <a asp-area="Administration" asp-controller="Orders" asp-action="Denied" class="myButton-blue btn-sm"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            }
        </div>
        <hr />
    </div>
    <table class="table">
        <thead>
            <tr class="row d-flex justify-content-around">
                <th scope="col" class="col-md-2 col d-flex justify-content-center"></th>
                <th scope="col" class="col-md-1 col d-flex justify-content-center">Product №</th>
                <th scope="col" class="col-md-5 col d-flex justify-content-center">Name</th>
                <th scope="col" class="col-md-1 col d-flex justify-content-center">Quantity</th>
                <th scope="col" class="col-md-1 col d-flex justify-content-center">In Stock</th>
                <th scope="col" class="col-md-1 col d-flex justify-content-center">Price</th>
                <th scope="col" class="col-md-1 col d-flex justify-content-center">Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.OrderProductsViewModel)
            {
                <tr class="row d-flex justify-content-around">
                    <td class="col-md-2 col d-flex justify-content-center">
                        <img src="@product.ImageUrl" width="50" height="50">
                    </td>
                    <td class="col-md-1 col d-flex justify-content-center">
                        @product.ProductId
                    </td>
                    <td class="col-md-5 col d-flex justify-content-center">
                        @product.ProductName
                    </td>
                    <td class="col-md-1 col d-flex justify-content-center">
                        @product.Quantity
                    </td>
                    @if (product.InStock == 0)
                    {
                        <td class="col-md-1 col d-flex justify-content-center text-danger font-weight-bold">
                            @product.InStock
                        </td>
                    }
                    else
                    {
                        <td class="col-md-1 col d-flex justify-content-center text-success font-weight-bold">
                            @product.InStock
                        </td>
                    }
                    <td class="col-md-1 col d-flex justify-content-center">
                        @product.Price lv.
                    </td>
                    <td class="col-md-1 col d-flex justify-content-center">
                        @(product.Price * product.Quantity) lv.
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>



