@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Common;
@using X.PagedList;

@model IPagedList<Photoparallel.Data.Models.Product>

@{
    ViewData["Title"] = "All Products";
}

<div class="container mobile-fondsize-11">
    <div class="h2 text-center text-info font-weight-bold">All Products</div>
    <table class="table table-hover">
        <thead>
            <tr class="row d-flex justify-content-around">
                <th scope="col" class="col-1 d-flex justify-content-center"></th>
                <th scope="col" class="col-3 d-flex justify-content-center text-white">Name</th>
                <th scope="col" class="col-1 d-flex justify-content-center text-white">Price</th>
                <th scope="col" class="col-2 d-flex justify-content-center text-white">Brand</th>
                <th scope="col" class="col-2 d-flex justify-content-center"></th>
                <th scope="col" class="col-3 d-flex justify-content-center"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr class="row d-flex justify-content-around">
                    <td class="col-1 d-flex justify-content-center">
                        <img src="@product.Images.FirstOrDefault()?.ImageUrl" width="50" height="50">
                    </td>
                    <td class="col-3 d-flex justify-content-center">
                        <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                            @product.Name
                        </a>
                    </td>
                    <td class="col-1 d-flex justify-content-center">
                        @(product.Price)лв.
                    </td>
                    <td class="col-2 d-flex justify-content-center">
                        @product.Brand
                    </td>                   
                    <td class="col-md-3 d-flex justify-content-around">
                        <div class="mr-2">
                            <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-primary btn-sm mobile-fondsize-11">Edit</a>
                        </div>
                        <div class="mr-2">
                            <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Details</a>
                        </div>  
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>