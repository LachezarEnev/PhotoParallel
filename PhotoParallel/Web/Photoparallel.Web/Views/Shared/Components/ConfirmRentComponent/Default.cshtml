@model Photoparallel.Web.ViewModels.Rents.OpenRentViewModel

@{
    ViewData["Title"] = "Default";
}
<table class="table">
    <thead>
        <tr class="row">
            <th scope="col" class="col-2 d-flex justify-content-center">Product</th>
            <th scope="col" class="col-4 d-flex justify-content-center"></th>
            <th scope="col" class="col-3 d-flex justify-content-center">Price per day</th>             
            <th scope="col" class="col-1 d-flex justify-content-center">Days</th>        
            <th scope="col" class="col-2 d-flex justify-content-center">Total</th>        
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr class="row">
                <td class="col-2 d-flex justify-content-center">
                    <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                        <img src="@product.ImageUrl" width="50" height="50">
                    </a>
                </td>
                <td class="col-4 d-flex justify-content-center">
                    <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                        @product.Name
                    </a>
                </td>
                <td class="col-3 d-flex justify-content-center">@product.PricePerDay</td>                             
                <td class="col-1 d-flex justify-content-center">@Model.Days</td>
                <td class="col-2 d-flex justify-content-center">@(product.PricePerDay * Model.Days)</td>
            </tr>
        }
    </tbody>
</table>

