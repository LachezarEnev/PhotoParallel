@model Photoparallel.Web.ViewModels.Rents.OpenRentViewModel
@using Photoparallel.Common

@{
    ViewData["Title"] = "Default";
}
<table class="table">
    <thead>
        <tr class="row">
            <th scope="col" class="col-2 d-flex justify-content-center">Product</th>
            <th scope="col" class="col-4 d-flex justify-content-center"></th>
            <th scope="col" class="col-2 d-flex justify-content-center">Price per day</th>
            <th scope="col" class="col-2 d-flex justify-content-center">Quantity</th>
            <th scope="col" class="col-2 d-flex justify-content-center">Guarantee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr class="row">
                <td class="col-2 d-flex justify-content-center">
                    <img src="@product.ImageUrl" width="50" height="50">
                </td>
                <td class="col-4 d-flex justify-content-center">
                    @product.Name
                </td>
                <td class="col-2 d-flex justify-content-center">@product.PricePerDay BGN</td>
                <td class="col-2 d-flex justify-content-center">@product.RentQuantity</td>
                <td class="col-2 d-flex justify-content-center">@(Math.Round(product.Price * GlobalConstants.GuaranteePercent).ToString("F2")) BGN</td>
            </tr>
        }
    </tbody>
</table>

