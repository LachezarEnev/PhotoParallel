<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - Photoparallel</title>

    <environment names="Development">
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/site.min.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <link rel="stylesheet" href="~/css/reset-css.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style.css" />


</head>
<body>
    <header>
        @if (!this.User.Identity.IsAuthenticated)
        {
            <!-- header-area start -->
            <div id="sticker" class="header-bg">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <style>

                                body {
                                    background-image: url("/img/camera1.jpg");
                                }
                            </style>
                            <nav class="navbar navbar-expand-lg navbar-dark bg-transparent">
                                <div class="navbar-header">
                                    <a class="navbar-brand page-scroll sticky-logo" href="/Home/Index">
                                        <h1><span>Photo</span>Parallel</h1>
                                    </a>
                                </div>
                                <div class="collapse navbar-collapse main-menu bs-example-navbar-collapse-1" id="navbar-example">
                                    <ul class="nav navbar-nav navbar-right">
                                        <li class="active">
                                            <a class="page-scroll" href="/Home/Index">Home</a>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="/Identity/Account/Login">Login</a>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="/Identity/Account/Register">Register</a>
                                        </li>
                                    </ul>
                                    <ul class="nav navbar-nav navbar-left">
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products</a>
                                            <ul class="dropdown-menu bg-transparent" role="menu">
                                                <li><a href=#>Cameras</a></li>
                                                <li><a href=#>Lenses</a></li>
                                                <li><a href=#>Drones</a></li>
                                                <li><a href=#>Microphones</a></li>
                                                <li><a href=#>Stands</a></li>
                                                <li><a href=#>Bags</a></li>
                                                <li><a href=#>Accessories</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="#contact">Contact</a>
                                        </li>
                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (this.User.IsInRole("Administrator"))
        {
            <div id="sticker" class="header-bg">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <style>

                                body {
                                    background-image: url("/img/camera1.jpg");
                                }
                            </style>
                            <nav class="navbar navbar-expand-lg navbar-dark bg-transparent">
                                <div class="navbar-header">
                                    <a class="navbar-brand page-scroll sticky-logo" href="/Home/Index">
                                        <h1><span>Photo</span>Parallel</h1>
                                    </a>
                                </div>
                                <div class="collapse navbar-collapse main-menu bs-example-navbar-collapse-1" id="navbar-example">
                                    <ul class="nav navbar-nav navbar-right">
                                        <li class="active">
                                            <a class="page-scroll" href="/Home/Index">Home</a>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="/Identity/Account/Logout">Logout</a>
                                        </li>
                                    </ul>
                                    <ul class="nav navbar-nav navbar-left">
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products</a>
                                            <ul class="dropdown-menu  bg-transparent" role="menu">
                                                <li><a href=#>Cameras</a></li>
                                                <li><a href=#>Lenses</a></li>
                                                <li><a href=#>Drones</a></li>
                                                <li><a href=#>Microphones</a></li>
                                                <li><a href=#>Stands</a></li>
                                                <li><a href=#>Bags</a></li>
                                                <li><a href=#>Accessories</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="#portfolio">Rent</a>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="#blog">Create Product</a>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="#contact">Contact</a>
                                        </li>
                                    </ul>

                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        }
        else if (this.User.IsInRole("User"))
        {
            <div id="sticker" class="header-bg">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <style>

                                body {
                                    background-image: url("/img/camera1.jpg");
                                }
                            </style>
                            <nav class="navbar navbar-expand-lg navbar-dark bg-transparent">
                                <div class="navbar-header">
                                    <a class="navbar-brand page-scroll sticky-logo" href="/Home/Index">
                                        <h1><span>Photo</span>Parallel</h1>
                                    </a>
                                </div>
                                <div class="collapse navbar-collapse main-menu bs-example-navbar-collapse-1" id="navbar-example">
                                    <ul class="nav navbar-nav navbar-right">
                                        <li class="active">
                                            <a class="page-scroll" href="/Home/Index">Home</a>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="/Identity/Account/Logout">Logout</a>
                                        </li>
                                    </ul>
                                    <ul class="nav navbar-nav navbar-left">
                                        <li class="dropdown">
                                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Products</a>
                                            <ul class="dropdown-menu  bg-transparent" role="menu">
                                                <li><a href=#>Cameras</a></li>
                                                <li><a href=#>Lenses</a></li>
                                                <li><a href=#>Drones</a></li>
                                                <li><a href=#>Microphones</a></li>
                                                <li><a href=#>Stands</a></li>
                                                <li><a href=#>Bags</a></li>
                                                <li><a href=#>Accessories</a></li>
                                            </ul>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="#portfolio">Rent</a>
                                        </li>
                                        <li>
                                            <a class="page-scroll" href="#contact">Contact</a>
                                        </li>
                                    </ul>

                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        }

    </header>

    <div class="container body-content body-height">
        <main class="mt-3">
            @this.RenderBody()
        </main>
    </div>

    <footer class="text-center m-3">
        <p>&copy; 2019 - Photoparallel.Web</p>
    </footer>    

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js" asp-append-version="true"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" asp-append-version="true"></script>
        <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js" asp-append-version="true"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    @this.RenderSection("Scripts", required: false)

</body>
</html>
