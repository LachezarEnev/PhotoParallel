@model Photoparallel.Web.ViewModels.Credits.ConfirmCreditViewModel

@{
    ViewData["Title"] = "Confirm";
}

<div class="progress pt-1">
    <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="h4 font-weight-bold text-center text-info">Recipent Data:</div>
        <div class="card card-body bg-info">
            <div><span class="font-weight-bold">Recipient:</span> @Model.Order.Recipient</div>
            <div><span class="font-weight-bold">Phone Number:</span> @Model.Order.RecipientPhoneNumber</div>           
            <div><span class="font-weight-bold">Id Number:</span> @Model.IdNumber</div>
            <div><span class="font-weight-bold">UCN:</span> @Model.Ucn</div>
            <div><span class="font-weight-bold">Address:</span> @Model.Address</div>
        </div>
        <div class="h4 font-weight-bold text-center text-info">Credit Terms:</div>
        <div class="card card-body bg-info">
            <div><span class="font-weight-bold">Credit Company:</span> @Model.CreditCompany.Name</div>
            <div><span class="font-weight-bold">Price per Month:</span> @Model.PricePerMonth</div>
            <div><span class="font-weight-bold">Monthly installments:</span> @Model.Months</div>
            <div><span class="font-weight-bold">Credit Amount:</span> @Model.TotalAmount</div>
            <div><span class="font-weight-bold">Valid Until:</span> @Model.ActiveUntil.ToString("dd/MM/yyyy")</div>
        </div>
        <div class="container-fluid d-flex justify-content-around m-5">
            <div class="mb-2">
                <a asp-controller="Credits" asp-action="Create" asp-route-direct="true" class="myButton-orange btn-lg btn-block text-center"><i class="fas fa-cog"></i> Edit</a>
            </div>
            <div class="mb-2">
                <a asp-controller="Credits" asp-action="Finish" asp-route-direct="true" class="myButton-olive btn-lg btn-block text-center"><i class="fas fa-check"></i> Finish</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="container-fluid">
            @await Component.InvokeAsync(typeof(OpenOrderComponent))
            <div class="text-center">
                <p class="font-weight-bold text-danger h4 text-right">Cost of goods: @(Model.Order.TotalPrice) BGN</p>
            </div>
            <hr />
            <div class="text-center">
                <p class="font-weight-bold text-danger h4 text-right">Credit Amount: @(Model.TotalAmount) BGN</p>
            </div>
        </div>
    </div>
</div>
