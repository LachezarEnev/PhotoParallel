@model IEnumerable<Photoparallel.Web.ViewModels.Orders.OpenOrdersProductsViewModel>

@{
    ViewData["Title"] = "My Order";
}

<div class="mobile-fondsize-20 h2 text-info text-center">@ViewData["Title"]</div>
<hr class="w-50"/>
<div class="row">
    <div class="col-lg-8">
        <div class="container mobile-fondsize-11">
            <table class="table table-hover">
                <thead>
                    <tr class="row">
                        <th scope="col" class="col-2 d-flex justify-content-center">Product</th>
                        <th scope="col" class="col-4 d-flex justify-content-center"></th>
                        <th scope="col" class="col-1 d-flex justify-content-center"></th>
                        <th scope="col" class="col-2 d-flex justify-content-center">Price</th>
                        <th scope="col" class="col-1 d-flex justify-content-center">Quantity</th>
                        <th scope="col" class="col-2 d-flex justify-content-center">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr class="row">
                            <td class="col-2 d-flex justify-content-center">
                                <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                    <img src="@product.ImageUrl" width="50" height="50">
                                </a>
                            </td>
                            <td class="col-4 d-flex justify-content-center">
                                <a asp-area="" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id">
                                    @product.Name
                                </a>
                            </td>
                            <td class="col-1 d-flex justify-content-center">
                                <a class="text-danger" asp-controller="ShoppingCart" asp-action="Delete" asp-route-id="@product.Id"><i class="fas fa-times-circle"></i></a>
                            </td>
                            <td class="col-2 d-flex justify-content-center">@product.Price</td>
                            <td class="col-1 d-flex justify-content-center">
                                <a class="text-danger pr-2" asp-controller="ShoppingCart" asp-action="Edit" asp-route-id="@product.Id" asp-route-quantity="@(product.OrderQuantity - 1)"><i class="fas fa-minus-circle"> </i> </a>
                                @product.OrderQuantity
                                <a class="text-danger pl-2" asp-controller="ShoppingCart" asp-action="Edit" asp-route-id="@product.Id" asp-route-quantity="@(product.OrderQuantity + 1)"><i class="fas fa-plus-circle"> </i> </a>
                            </td>
                            <td class="col-2 d-flex justify-content-center">@product.TotalPrice</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>    
</div>
<div class="row">
    <div class="col-lg-12 d-flex justify-content-between">

        <div class="mt-4">
            <p class="font-weight-bold text-danger h4 mt-3">Total amount: @(Model.Sum(x => x.TotalPrice))лв.</p>
        </div>

        <div class="text-right mt-3 mb-3">
            <a asp-controller="Home" asp-action="Index" class="form-group myButton-blue btn-lg btn-block mb-0">Continue Shopping</a>
        </div>

        <div class="text-right mt-3 mb-3">
            <a asp-controller="Orders" asp-action="Create" class="form-group myButton-olive btn-lg btn-block mb-0">Finish Order</a>
        </div>
    </div>
</div>
